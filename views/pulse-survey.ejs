<style>
  /* Custom CSS for centering the button and adding padding/margin */
  .btn {
    display: flex;
    flex-direction: column;
    align-items: center;

    margin-top: 20px; /* Adjust the top margin as needed */
    padding: 10px 53px 10px;
  }

  .container {
    font-family: math;
    font-size: larger;
    font-weight: 900;
  }
</style>

<div class="container mt-5 bg-cream">
  <h1 class="mb-4">Pulse Survey</h1>
  <form id="pulse-survey-form">
    <div class="form-group">
      <label for="question1"
        >Question 1: How satisfied are you with your work?</label
      >
      <select class="form-control" id="question1" name="question1">
        <option value="VerySatisfied">Very Satisfied</option>
        <option value="Satisfied">Satisfied</option>
        <option value="Neutral">Neutral</option>
        <option value="Dissatisfied">Dissatisfied</option>
        <option value="VeryDissatisfied">Very Dissatisfied</option>
      </select>
    </div>
    <div class="form-group">
      <label for="question2">Question 2: Do you feel heard by your team?</label>
      <select class="form-control" id="question2" name="question2">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="question3">Question 3: Additional comments (optional)</label>
      <textarea
        class="form-control"
        id="question3"
        name="question3"
        rows="4"
      ></textarea>
    </div>
  </form>
  <div class="d-flex justify-content-center p-4">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
<script>
  // JavaScript to handle form submission
  $(document).ready(function () {
    $("#pulse-survey-form").submit(function (event) {
      event.preventDefault();

      // Retrieve user responses
      var response1 = $("#question1").val();
      var response2 = $("#question2").val();
      var response3 = $("#question3").val();

      // You can now send the responses to your server or process them as needed.
      // For this example, we'll just display them in the console.
      console.log("Question 1 Response: " + response1);
      console.log("Question 2 Response: " + response2);
      console.log("Question 3 Response: " + response3);

      // Optionally, you can send the responses to a server using AJAX.
      // Example: $.post("your-server-url", { response1, response2, response3 }, function(data) { });
    });
  });
</script>
